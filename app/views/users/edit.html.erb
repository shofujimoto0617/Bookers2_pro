<div class="container">
  <div class="row">
  	<div class="col-xs-3">
  	  <h1>User info</h1>
      <%= form_for(@user) do |f| %>
        <label class="field">
          <label for="user_name">Name</label>
          <%= f.text_field :name, autofocus: true %>
        </label>

        <label class="field">
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image %>
        </label>

        <label class="field">
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction, autofoucus: true %>
        </label>


        <label class="actions">
          <%= f.submit "Update User" %>
        </label>
      <% end %>
    </div>
  </div>
</div>