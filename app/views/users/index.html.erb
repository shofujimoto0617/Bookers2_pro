<div class="body">
  <div class="container">
  	<div class="row">
  	  <div class="col-xs-3">
  	  	<h2>User info</h2>
        <table class="table">
     	  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg" %>
           <tbody>
             <tr></tr>
             <tr>
               <th>name</th>
               <th><%= @user.name %></th>
             </tr>
             <tr>
               <th>introduction</th>
               <th><%= @user.introduction %></th>
             </tr>
           </tbody>
         </table>

         <%= link_to "", edit_user_path(@user), class: 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
      </div>
  	  <div class="col-xs-9">
  	  	<h2>Users</h2>

        <table class="table">
        <% @users.each do |user| %>
          <tr>
          	<td><%= attachment_image_tag user, :profile_image, format: 'jpg', size:"40x40", fallback: "no_image.jpg" %></td>

            <td><%= user.name %></td>

            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>

      </div>
    </div>
  </div>
</div>