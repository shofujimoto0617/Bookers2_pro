<div class="body">
  <div class="container">
  	<div class="row">
  	  <div class="col-xs-9">
  	  	<h1>Users</h1>

        <table class="table">
        <% @users.each do |user| %>
          <tr>
          	<td><%= attachment_image_tag user, :profile_image, format: 'jpg', size:"40x40", fallback: "no_image.jpg" %></td>

            <td><%= user.name %></td>

            <td><%= link_to 'Show', user_path(user.id) %></td>
          </tr>
        <% end %>

      </div>
    </div>
  </div>
</div>