<div class="body">
  <div class="container">
  	<div class="row">
  	  <div class="col-xs-9">
  	    <h2>Books</h2>
  	    <table class="table">
  	      <thead>
  	        <tr>
  	          <th></th>
  	          <th>Title</th>
  	          <th>Opinion</th>
  	          <th></th>
  	        </tr>
  	      </thead>
  	      <tbody>
  	      <% @books.each do |book| %>
  	      	<tr>
  	      	  <td>
  	      	  	<%= link_to users_path(book.user) do %>
  	      	  	  <%= attachment_image_tag book.user, :profile_image, format: 'jpg',size:"40x40", fallback:"no_image.jpg" %>
  	      	  	<% end %>
  	      	  </td>
  	      	  <td><%= link_to book.title, book_path(book.id) %></td>
  	      	  <td><%= book.body %></td>
  	      	  <td></td>
  	      	</tr>
  	      <% end %>
  	      </tbody>
  	    </table>
  	  </div>
  	</div>
  </div>
</div>